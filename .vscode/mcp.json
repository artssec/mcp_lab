{
	"servers": {
		"playwright": {
			"command": "npx",
			"args": [
				"@playwright/mcp@latest",
        "--proxy-server=http://127.0.0.1:8080" // Proxy para las solicitudes de Playwright pasen por Burp Suite
			],
			"type": "stdio"
		},
		"filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/user/mcp-lab", // Ruta al directorio del proyecto
      ]
    },
		"burp": {
      "command": "/usr/bin/java",
      "args": [
          "-jar",
          "/home/user/mcp-proxy.jar", // Ruta al archivo JAR de Burp Suite
          "--sse-url",
          "http://127.0.0.1:9876"
      ]
    }
	},
	"inputs": []
}